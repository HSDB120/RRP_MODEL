<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="ms2r1p_cx">
  <!-- Define colors -->
  <material name="blue_cx">
    <color rgba="0.0 0.0 0.8 1.0"/>
  </material>
  <material name="red_cx">
    <color rgba="0.8 0.0 0.0 1.0"/>
  </material>
  <material name="green_cx">
    <color rgba="0.0 0.8 0.0 1.0"/>
  </material>
  <material name="grey_cx">
    <color rgba="0.5 0.5 0.5 1.0"/>
  </material>

  <!-- Base Link -->
  <link name="base_link_cx">
    <visual>
      <geometry>
        <cylinder radius="0.1" length="0.82"/>
      </geometry>
      <origin xyz="0 0 0.41" rpy="0 0 0"/>
      <material name="grey_cx"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.1" length="0.82"/>
      </geometry>
      <origin xyz="0 0 0.41" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
  </link>

  <!-- Arm 1 Link -->
  <link name="arm_1_cx">
    <visual>
      <geometry>
        <box size="1.6 0.08 0.08"/>
      </geometry>
      <origin xyz="0.8 0 0" rpy="0 0 0"/>
      <material name="blue_cx"/>
    </visual>
    <collision>
      <geometry>
        <box size="1.6 0.08 0.08"/>
      </geometry>
      <origin xyz="0.8 0 0" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>
  </link>

  <!-- Joint 1: Base to Arm1 (Revolute) -->
  <joint name="base_to_arm1_cx" type="revolute">
    <parent link="base_link_cx"/>
    <child link="arm_1_cx"/>
    <origin xyz="0 0 0.82" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-1.5708" upper="1.5708" effort="100" velocity="1.0"/>
  </joint>

  <!-- Arm 2 Link -->
  <link name="arm_2_cx">
    <visual>
      <geometry>
        <box size="1.2 0.08 0.08"/>
      </geometry>
      <origin xyz="0.6 0 0" rpy="0 0 0"/>
      <material name="red_cx"/>
    </visual>
    <collision>
      <geometry>
        <box size="1.2 0.08 0.08"/>
      </geometry>
      <origin xyz="0.6 0 0" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.3"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>
  </link>

  <!-- Joint 2: Arm1 to Arm2 (Revolute) -->
  <joint name="arm_1_arm_2_joint_cx" type="revolute">
    <parent link="arm_1_cx"/>
    <child link="arm_2_cx"/>
    <origin xyz="1.6 0 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-2.0944" upper="2.0944" effort="100" velocity="1.0"/>
  </joint>

  <!-- Prismatic Link -->
  <link name="prismatic_link_cx">
    <visual>
      <geometry>
        <cylinder radius="0.03" length="0.18"/>
      </geometry>
      <origin xyz="0 0 -0.09" rpy="0 0 0"/>
      <material name="grey_cx"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.03" length="0.18"/>
      </geometry>
      <origin xyz="0 0 -0.09" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
    </inertial>
  </link>

  <!-- Joint 3: Arm2 to Prismatic (Fixed) -->
  <joint name="arm_2_to_prismatic_base_cx" type="fixed">
    <parent link="arm_2_cx"/>
    <child link="prismatic_link_cx"/>
    <origin xyz="1.2 0 0" rpy="0 0 0"/>
  </joint>

  <!-- End Effector Link -->
  <link name="end_effector_cx">
    <visual>
      <geometry>
        <cylinder radius="0.04" length="0.05"/>
      </geometry>
      <origin xyz="0 0 -0.025" rpy="0 0 0"/>
      <material name="green_cx"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.04" length="0.05"/>
      </geometry>
      <origin xyz="0 0 -0.025" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.05"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
    </inertial>
  </link>

  <!-- Joint 4: Prismatic to End Effector (Prismatic) -->
  <joint name="arm_2_prismatic_joint_cx" type="prismatic">
    <parent link="prismatic_link_cx"/>
    <child link="end_effector_cx"/>
    <origin xyz="0 0 -0.18" rpy="0 0 0"/>
    <axis xyz="0 0 -1"/>
    <limit lower="-0.6085" upper="0.0" effort="100" velocity="0.5"/>
  </joint>

</robot>
